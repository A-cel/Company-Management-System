@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SendResetPasswordUrl">
            <div asp-validation-summary="All"></div>
            <input class="text email" asp-for="Email" placeholder="Email" required="" />
            
            <input type="submit" value="Reset Password" />
        </form>
        <p>Do You Have An Account ?<a asp-action="SignUp"> Register Now!</a></p>
        <p><a asp-action="ForgetPassword">Forget Passowrd ?</a></p>
    </div>
</div>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}


